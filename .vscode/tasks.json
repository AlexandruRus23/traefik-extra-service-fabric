{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runtests",
            "type": "shell",
            "command": "go build . && go test -v",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run integration tests",
            "type": "shell",
            "command": "go build . && go test integration/integration_test.go -v",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}